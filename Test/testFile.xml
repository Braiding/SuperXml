<?xml version="1.0" encoding="utf-8" ?> 
<document>
  <name>my name is {{name}}</name>
  <width>{{width}}</width>
  <height>{{height}}</height>
  <area>{{width*height}}</area>
  <padding>
    <bound trRepeat="bound in bounds">{{bound}}</bound>
  </padding>
  <content>
    <element trRepeat="element in elements" trIf="element.Age > 25">
      <name>{{element.Name}}</name>
      <age>{{element.Age}}</age>
    </element>
  </content>
  <trRun trRepeat="a in numbers">
    <trRun trRepeat="b in numbers">
      from a local scope variable {{a}}, {{b}}
      from an array: {{numbers[0]}},
      from parent scope: {{$parent.$index}},
    </trRun>
  </trRun>
</document>