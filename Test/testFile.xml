<?xml version="1.0" encoding="utf-8" ?> 
<document>
  <name>my name is {{name}}</name>
  <width>{{width}}</width>
  <height>{{height}}</height>
  <area>{{width*height}}</area>
  <padding>
    <bound Tor.Repeat="bound in bounds">{{bound}}</bound>
  </padding>
  <content>
    <element Tor.Repeat="element in elements" Tor.If="element.Age > 25">
      <name>{{element.Name}}</name>
      <age>{{element.Age}}</age>
    </element>
  </content>
  <Tor.Run Tor.Repeat="a in numbers">
    <Tor.Run Tor.Repeat="b in numbers">
      from a local scope variable {{a}}, {{b}}
      from an array: {{numbers[0]}},
      from parent scope: {{$parent.$index}},
    </Tor.Run>
  </Tor.Run>
</document>